<Window x:Class="Mutexes.Semaphores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mutexes.Semaphores"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Background="DarkGreen">
            <Border BorderBrush="Black" BorderThickness="5" CornerRadius="10" Margin="50" Padding="20">
                <StackPanel>
                    <TextBlock Text="Welcome to the Casino!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <Button x:Name="startButton" Content="Start Simulation" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Click="StartSimulation_Click"/>
                    <TextBlock x:Name="progressText" TextWrapping="Wrap" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
